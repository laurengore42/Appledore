@using HolmesMVC
@using HolmesMVC.Models.ViewModels
@model ScrapsView

@{
    ViewBag.Title = "Scraps";    
}

<div id="body">
    <h2>@ViewBag.Title</h2>
</div>

@section Scripts {

    <ul>
    @foreach (var link in Model.HolmesLinks) {
        <li>
        if (link.Episode1 != null)
        {
            @Shared.DisplayName(link.Episode1)
        } else {
            @link.Title
        }
        : 
        @foreach (var app in link.HolmesLinkAppearances) {
            if (app.HolmesLinkActor1 != null) 
            {
                @Shared.DisplayName(app.HolmesLinkActor1.Actor1)
            } else {
                @app.HolmesLinkActor1.Name
            }
            <text> and </text>
        }
            </li>
    }
        </ul>

}