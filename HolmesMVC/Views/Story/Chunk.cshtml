@model HolmesMVC.Models.ViewModels.StoryView
@{
    ViewBag.Title = "A quote from '" + Model.Episode.Story + "'";
}

<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@("@")geeoharee" />
<meta name="twitter:title" content="'@Model.Episode.Story'" />
<meta name="twitter:description" content="@Model.ChunkText" />
<meta name="twitter:image" content="https://placeholdit.imgix.net/~text?txtsize=56&bg=c9efd2&txtclr=008000&txt=@Model.Episode.StoryCode&w=125&h=125&txttrack=0" />
<link href="/Content/Cano.css" rel="stylesheet" />

<section class="leftfloatdetails">
    <article>
        <div class="storyChunk">@Html.Raw(Model.ChunkXml)</div>
        -- <i>@Html.ActionLink("'" + Model.Episode.Story + "'", "Details", "Story", new { id = Model.Episode.StoryCode }, null)</i>, Sir Arthur Conan Doyle
        <p><a href="https://twitter.com/share" class="twitter-share-button" data-text="'@Model.Episode.Story'">Tweet</a> <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^https:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script></p>
    </article>
</section>

<div class="clear-fix"></div>