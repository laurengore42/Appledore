@using HolmesMVC.Models.ViewModels
@model ScrapsView

@{
    ViewBag.Title = "Scraps";    
}

<div id="body">
    <h2>@ViewBag.Title</h2>
</div>

@{    
    // Holding this in storage til I decide what to do with it
    // Pictorial collage of Holmes actors 
        @*
