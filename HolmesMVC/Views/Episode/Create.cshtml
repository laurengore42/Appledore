@using HolmesMVC
@using HolmesMVC.Enums
@model HolmesMVC.Models.ViewModels.EpisodeView

@{
    ViewBag.Title = "Create Episode";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Episode</legend>
        
        <div class="editor-label">
            Adaptation
        </div>
        <div class="editor-field">
            @Shared.DisplayName(ViewBag.chosenAdapt)
        </div>
        
        @Html.Action("SeasonBox", new { ID = ViewBag.adaptId, currentSeason = -1 })
        <span id ="SeasonOut">
        </span>

        <div class="editor-label">
            @Html.LabelFor(model => model.Story)
        </div>
        <div class="editor-field">
            <select id="Story" name="Story"> <!-- This is done by hand as the automatic binding only displays 'Final Problem', not 'FINA' -->
                <option value=""></option>
                @foreach (var story in ViewBag.Story)
                {
  <option value="@story.Value">@story.Value - @story.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.Story)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Airdate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Airdate, "Date")
            <select name="AirdatePrecision">
                <option value="@((int)DatePrecision.Full)" @if (Model.AirdatePrecision == DatePrecision.Full)
                                  {<text>selected</text>}>Full precision</option>
                <option value="@((int)DatePrecision.Month)" @if (Model.AirdatePrecision == DatePrecision.Month)
                                  {<text>selected</text>}>Accurate to month</option>
                <option value="@((int)DatePrecision.Season)" @if (Model.AirdatePrecision == DatePrecision.Season)
                                  {<text>selected</text>}>Accurate to season</option>
                <option value="@((int)DatePrecision.Year)" @if (Model.AirdatePrecision == DatePrecision.Year)
                                  {<text>selected</text>}>Accurate to year</option>
            </select>
            @Html.ValidationMessageFor(model => model.Airdate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Adaptation", "Details", "Adaptation", new { ID = ViewBag.adaptId }, null)
</div>

@section Scripts {
    

    @Scripts.Render("~/Scripts/Apdore-editorscripts.js")
}
