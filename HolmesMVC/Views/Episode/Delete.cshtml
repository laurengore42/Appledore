@using HolmesMVC
@model HolmesMVC.Models.Episode

@{
    ViewBag.Title = "Delete Episode";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this episode?</h3>

<p>'@Model.Title', @Shared.DisplayName(Model.Season1.Adaptation1)</p>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to Episode", "Details","Episode", new {ID = Model.ID}, null)
    </p>
}
